        <receiver android:name=".BakeryRecipiesShows">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/bakery_recipies_shows_info" />
        </receiver>

        <service android:name=".Services.BakeryRecipieShowService" />

        <service
            android:name=".WidgetReViService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>